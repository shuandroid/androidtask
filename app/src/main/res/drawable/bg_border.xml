<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF8C00" android:centerColor="#FF8C00" android:endColor="#FF8C00" android:type="sweep" />
            <stroke android:width="0dp" android:color="#FF8C00" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#FF8C00" android:endColor="#FF8C00" android:angle="90"/>
            <stroke android:width="0dp" android:color="#FF8C00"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#acdcdc" android:endColor="#acdcdc" android:angle="90"/>
            <stroke android:width="0dp" android:color="#acdcdc"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>